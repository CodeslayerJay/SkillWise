@model ApplicationUser
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section NavOptions {
    <a asp-controller="Dashboard" asp-action="Index">&larr;</a>
}

<h1 class="text-center pt-5">Details</h1>
<br/>
<div class="row col-lg-6 block m-auto">
    <div class="form-group row col-lg-12 pt-2">
        <div class="col-lg-2">
            <label>Name</label>
        </div>
        <div class="col-lg-10">
            <input value="@Model.FullName" class="form-control disabled" disabled />
        </div>
    </div>
    <div class="form-group row col-lg-12">
        <div class="col-lg-2">
            <label>Email</label>
        </div>
        <div class="col-lg-10">
            <input value="@Model.Email" class="form-control" disabled   />
        </div>
    </div>
    
    <div class="form-group row col-lg-12 pt-3">
        <div class="col-4 offset-lg-2">
            <a href="#" class="btn btn-info btn-block">Update</a>
        </div>
        <div class="col-lg-4">
            <form asp-controll="Account" asp-action="SignOut" method="post">
                <button type="submit" class="btn btn-danger btn-block">Sign Out</button>
            </form>
        </div>
        
    </div>
</div>


