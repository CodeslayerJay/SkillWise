@model SkillHour
@{
    ViewData["Title"] = "Log Hours";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section NavOptions {
    <a asp-controller="Skill" asp-action="View" asp-route-id="@ViewData["SkillId"]">&larr;</a>
}

<h1 class="text-center">Log Hours</h1>
<br />
<form asp-controller="SkillHour" asp-action="LogHours" method="post">
    <div class="block row col-lg-6 m-auto">
        <input type="hidden" name="SkillId" value="@ViewData["SkillId"]" />
        @Html.ValidationSummary()
        <div class="form-group row col-12">
            <div class="col-sm-12">
                <label asp-for="Hours"></label>
            </div>
            <div class="col-sm-12">
                <input asp-for="Hours" class="form-control" />
            </div>
            <div class="col-sm-12">
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row col-12">
            <div class="col-sm-12">
                <label asp-for="Note"></label>
            </div>
            <div class="col-sm-12">
                <textarea asp-for="Note" class="form-control" rows="5"></textarea>
            </div>
            <div class="col-sm-12">
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row pt-2 col-12">

            <div class="col-lg-4 offset-lg-2">
                <button type="submit" class="btn btn-primary btn-block btn-lg">Save</button>
            </div>
            <div class="col-lg-4">
                <a asp-controller="Skill" asp-action="View" asp-route-id="@ViewData["SkillId"]" class="btn btn-light btn-lg btn-block">Cancel</a>
            </div>
        </div>

    </div>
</form>

<partial name="_ValidationScriptsPartial" />